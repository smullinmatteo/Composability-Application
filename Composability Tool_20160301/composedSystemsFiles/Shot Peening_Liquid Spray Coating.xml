<ComposedSystem>
<UMPs>
<UMP name="Shot Peening" type="Surface Modification" description="imparts a compressive residual stress to the surface of the workpiece through bombardment with high velocity shot">
<Parameter name="percentCov" value="100"/>
<Parameter name="batchTime" value="1"/>
<Parameter name="shotUseRate" value="30"/>
<Parameter name="shotFlowRater" value="50"/>
<Parameter name="shotVelocity" value="30"/>
<Parameter name="E" value="1"/>
<Transformation>
<Equation category="Time" description="process time equal to coverage times batch time">processTime=1</Equation>
<Equation category="Shot" description="mass of shot consumption">shotConsumption=30</Equation>
<Equation category="Shot" description="shot power">shotPower=0.00625</Equation>
<Equation category="Energy" description="on site energy consumption equal to shot power times process time">Eon=0.00625</Equation>
</Transformation>
<SustainabilityMetrics>
<Metric name="Operating Cost($)" value="100" />
<Metric name="Energy Use(kWh)" value="0.0125" />
<Metric name="Water Use(L)" value="0" />
<Metric name="GHG Emissions(Kg)" value="19.412855" />
<Metric name="Total Waste(Kg)" value="0.6" />
<Metric name="Average Wage($/hr)" value="25" />
<Metric name="Lost Work Days" value="0" />
</SustainabilityMetrics>
</UMP>
<UMP name="Liquid Spray Coating" type="Surface Finishing" description="description2">
<Parameter name="toolPaintFlow" value="240"/>
<Parameter name="processTime" value="1"/>
<Parameter name="layers" value="1"/>
<Parameter name="surfaceArea" value="70"/>
<Parameter name="layerThickness" value="1"/>
<Parameter name="powerAirCompressor" value="500"/>
<Parameter name="paintDensity" value="2"/>
<Transformation>
<Equation category="" description="description4">volumeAirConsumed=240</Equation>
<Equation category="category5" description="description5">volumePaintConsumed=70</Equation>
<Equation category="category6" description="description6">energyCoat=2000</Equation>
<Equation category="category6" description="description6">massPaintConsumed=35</Equation>
</Transformation>
<SustainabilityMetrics>
<Metric name="Operating Cost($)" value="2240" />
<Metric name="Energy Use(kWh)" value="0" />
<Metric name="Water Use(L)" value="0" />
<Metric name="GHG Emissions(Kg)" value="0" />
<Metric name="Total Waste(Kg)" value="0" />
<Metric name="Average Wage($/hr)" value="0" />
<Metric name="Lost Work Days" value="0" />
</SustainabilityMetrics>
</UMP>
</UMPs>
<Linking>
<LinkingAction targetUMP = "Liquid Spray Coating" sourceUMP = "Shot Peening" allocationVariable = "1">
<Transformation targetInput="Surface Area"  sourceOutput="Impression Depth">
<Equation name="constant">1</Equation>
<Equation name="modElastic">0.5</Equation>
<Equation name="shotDensity">7</Equation>
<Equation name="brinellHardness">25</Equation>
<Equation name="coveragePerc">100</Equation>
</Transformation>
</LinkingAction>
</Linking>
<FinalSustainabilityMetrics>
<Metric name="Operating Cost($)" value="2340" />
<Metric name="Energy Use(kWh)" value="0.0125" />
<Metric name="Water Use(L)" value="0" />
<Metric name="GHG Emissions(Kg)" value="19.412855" />
<Metric name="Total Waste(Kg)" value="0.6" />
<Metric name="Average Wage($/hr)" value="25" />
<Metric name="Lost Work Days" value="0" />
</FinalSustainabilityMetrics>
</ComposedSystem>