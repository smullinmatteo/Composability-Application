                    <chartingToolkit:ColumnSeries HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Title="C1" Name="compare1" Margin="0,0,0,0" Foreground="Black"
                    ItemsSource="{Binding}"
                    DataContext="{Binding}"
